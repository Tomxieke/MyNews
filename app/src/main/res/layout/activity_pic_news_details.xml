<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ngview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark">

    <com.example.scxh.mynews.title_view.NavigationView
        android:id="@+id/pc_navigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ngview:nv_back_img="@mipmap/abc_ic_ab_back_mtrl_am_alpha"
        ngview:nv_more_img="@mipmap/abc_ic_menu_moreoverflow_mtrl_alpha"
        ngview:bgcolor="@android:color/background_dark"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/details_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pc_navigationView" />

</RelativeLayout>
