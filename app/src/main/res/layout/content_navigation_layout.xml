<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <ImageButton
        android:id="@+id/navigation_back_imgbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:id="@+id/navigation_more_imgbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/navigation_comment_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="123xml条评论"
        android:textColor="@android:color/primary_text_dark_nodisable"
        android:gravity="center"
        android:textSize="15dp"
        android:clickable="true"
        android:background="@drawable/biz_newspage_comment_bg"
        android:layout_toLeftOf="@id/navigation_more_imgbtn"
        android:layout_marginRight="5dp"/>

</RelativeLayout>