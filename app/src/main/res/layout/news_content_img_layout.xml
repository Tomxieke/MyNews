<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/news_content_framelayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/news_content_imgsrc_img"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
        <ProgressBar
            android:id="@+id/news_content_progressbar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>
    </FrameLayout>

    <TextView
        android:id="@+id/news_content_alt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_content_framelayout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@android:color/primary_text_dark_nodisable"
        android:text="驯龙记"/>

    <TextView
        android:id="@+id/news_content_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_content_framelayout"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@android:color/primary_text_dark_nodisable"
        android:text="1/10"/>


</RelativeLayout>